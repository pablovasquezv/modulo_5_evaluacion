<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.RequestMoneyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgViewStatusbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingLeft="10dp"
            android:src="@drawable/statusbar" />
        <!--Inicio contenido-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="36dp"
            android:paddingRight="36dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shape"
                    android:layout_width="46dp"
                    android:layout_height="24dp"
                    android:layout_margin="10dp"
                    android:layout_marginEnd="2dp"
                    android:contentDescription="shape"
                    android:src="@drawable/shape" />

                <TextView
                    android:id="@+id/request_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/request_money_string"
                    android:textColor="@color/add_payment_note_color"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--Imagen fin-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:contentDescription="profile_picture"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:src="@drawable/profile_picture" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/profile_picture"
                    android:layout_toRightOf="@+id/profile_picture"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/reem_khaled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="2dp"
                        android:text="@string/reem_khaled_string"
                        android:textColor="@color/add_payment_note_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/reem_1993_gmail_com_string"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/reem_1993_gmail_com_string" />
                </LinearLayout>
            </RelativeLayout>
            <!-- Cantidad Inicio-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/payment_amount_ek2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="36dp"
                    android:text="@string/payment_send_amount_ek2_string"
                    android:textColor="@color/add_payment_note_color"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rectangle_ek4_shape"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/txtReqMoney"
                        android:layout_width="56.6dp"
                        android:layout_height="58.6dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:text="@string/_12_50_string"
                        android:textColor="@color/rectangle_ek1_color"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteY="286dp" />
                </LinearLayout>
            </LinearLayout>
            <!-- Inicio Notas-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/payment_note_ek2"
                    android:layout_width="155.4dp"
                    android:layout_height="25.4dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="9dp"
                    android:text="@string/payment_note_ek2_string"
                    android:textColor="@color/add_payment_note_color"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/rectangle_ek3"
                    android:layout_width="339dp"
                    android:layout_height="198dp"
                    android:background="@drawable/rectangle_ek4_shape"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtRequestMoneyNote"
                        android:layout_width="268.4dp"
                        android:layout_height="25.4dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="68dp"
                        android:layout_marginBottom="154dp"
                        android:alpha="0.2494"
                        android:text="@string/add_payment_note_string"
                        android:textColor="@color/add_payment_note_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- Fin Notas-->
        </LinearLayout>
        <!--Fin contenido-->
        <!-- Inicio Footer-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/rectangle"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:paddingVertical="36dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                >

                <Button
                    android:id="@+id/btnRequestMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/colorbtn"
                    android:drawableLeft="@drawable/path"
                    android:drawablePadding="12dp"
                    android:paddingLeft="100dp"
                    android:paddingRight="90dp"
                    android:text="@string/send_payment_string"
                    android:textColor="@color/black" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>